{
  "mcpServers": {
    "blender": {
      "command": "python",
      "args": ["./backend/mcp_servers/mcp_server_blender.py"],
      "transport": "stdio",
      "description": "Blender 3D 제어 및 모델링 도구",
      "enabled": true
    },
    "unity": {
      "command": "python", 
      "args": ["./backend/mcp_servers/mcp_server_unity.py"],
      "transport": "stdio",
      "description": "Unity 3D 게임 엔진 제어 도구",
      "enabled": true
    },
    "web_service": {
      "command": "python",
      "args": ["./backend/mcp_servers/mcp_server_web.py"], 
      "transport": "stdio",
      "description": "웹 서비스 관리 및 제어 도구",
      "enabled": true
    }
  },
  "settings": {
    "timeout": 30,
    "max_tools_per_request": 5,
    "enable_parallel_execution": false,
    "log_tool_usage": true,
    "debug_mode": false
  },
  "tool_categories": {
    "3d_modeling": ["blender"],
    "game_development": ["unity"], 
    "web_management": ["web_service"]
  }
}